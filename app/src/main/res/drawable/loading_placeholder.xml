<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background shape -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/> <!-- Background color -->
            <stroke android:width="1dp" android:color="@color/bright_cyan" /> <!-- Border color -->
        </shape>
    </item>

    <!-- Drawable (Image Icon) -->
    <item
        android:gravity="center"
        android:drawable="@android:drawable/ic_menu_gallery" /> <!-- Built-in drawable for image icon -->

</layer-list>
